<div>
    <h1>ログイン</h1>
</div>

<div>
    <div>
        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
            <div>
                <%= f.label :email, 'Eメール' %>
                <%= f.email_field :email %>
            </div>

            <div>
                <%= f.label :password, 'Password' %>
                <%= f.password_field :password %>
            </div>
            
            <%= f.submit 'ログイン' %>
        
        <% end %>

        <p>New user? 
            <%= link_to 'ログインしました！', signup_path %>
        </p>
        
    </div>
</div>